/*β��*/
footer{
    width: 100%;
    background: #4d4d4d;
    text-align: center;
    color: #fff;
}
footer ul{
    width: 100%;
    background: #333;
    margin: 0 auto;
    height: 102px
    overflow: hidden;
}
footer ul li{
    display: inline-block;
    height: 102px;
    padding:40px 0;
    margin: 0 40px;
}
footer ul li a{
    color: #fff;
}
footer ul li i{
    display: block;
    width: 90px;
    height: 90px;
    background: url("../pic/small.png") no-repeat -200px -45px;
}
footer ul li:first-child i{
    background: url("../pic/small.png") no-repeat 0 -45px;
}
footer ul li i.chat{
    background: url("../pic/small.png") no-repeat -90px -45px;
}
footer ul li:last-child i{
    background: url("../pic/small.png") no-repeat -315px -45px;
}
footer p{
    height: 100px;
    box-sizing: border-box;
    margin-top: 20px;
    line-height: 30px;
}