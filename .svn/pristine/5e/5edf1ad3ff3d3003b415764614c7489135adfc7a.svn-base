/*ͨ����ʽ*/
body{
    background: #fff;
    font: 14px "����",Arial,sans-serif;
    color:#333;
    margin: 0;
    padding: 0;
}
ul,p,h1,h2,h3,h4,h5,h6,dl,dd{
    margin:0;
    padding:0;
    list-style:none;
}
i,em,s{font-style: normal;text-decoration: none;padding: 0;margin: 0;}
input{margin: 0;padding: 0;}
.lf{float:left;}
.rt{float:right;}
.clear{clear:both;}
img{vertical-align:bottom;}
a{
    color:#333;
    text-decoration:none;
}
a:hover{
    color:#FF0700;
}

/*ҳ������岼��*/
#top_box,#goodsClassify{
    width: 100%;
    height: 40px;
}

header,#searchHot,#goodsClassify>ul,#main{
    width: 1200px;
    margin: 0 auto;
}

/*ͷ��css*/
#top_box{
    background: #f2f2f2;
}
header{
    text-align: center;
    line-height: 40px;
    height: 40px;
    overflow: hidden;
}
header p{
    float:left;
}
header p img{
    position: relative;
    top:-5px;
    left: -2px;
}
header p {
   font-size: 12px;

}
header ul{
    float: right;
}
header ul li{
    float: left;
    margin: 0 10px;
    font-size: 12px;
}
header ul li a{
    display: inline-block;
    height: 40px;
    line-height: 40px;
    font-size: 12px;
}

/*��������*/
#searchHot{
    height: 120px;
    margin: 20px auto;
}
/*logo*/
.logo{
    float: left;
}

/*������ ������*/
.searchHot{
    float: left;
    margin-left: 200px;
    margin-top: 30px;
}
.search{
    border: 2px solid #3ca3dd;
    float: left;
    box-sizing: border-box;
}
.searchHot input{
    width: 380px;
    height: 25px;
    padding-left: 5px;
    border:0;
}
.searchHot input:focus{
    border: none;
}
.searchHot button{
    background: #3ca3dd;
    color: #fff;
    width: 100px;
    height: 29px;
    margin: 0;
    border: 0;
}
.hot{
    margin-top: 10px;
}
.hot a{
    color: #666;
    margin:20px;
}
/*�����������ﳵ*/
.shoppingCart{
    float: right;
    margin-top: 20px;
}
.shoppingCart ul{
    margin-top: 8px;
}
.shoppingCart li{
    float: left;
    padding: 4px 10px;
    text-align: center;
    margin: 0;
    border: 1px solid #b3b3b3;
    background: #fff;
}
.shoppingCart li i{
    display: inline-block;
    width: 32px;
    height: 32px;
    background: url("../pic/small.png") no-repeat -33px -5px ;
}
.shoppingCart li:first-child i{
    background: url("../pic/small.png") no-repeat -5px -5px ;
}
.shoppingCart li:last-child{
    background: #3ca3dd;
    width: 100px;
    height: 62px;
    line-height: 70px;
    position: relative;
    top: -3px;
    border: none;
}
.shoppingCart li:last-child i{
    float: left;
    margin-top: 10px;
    background: url("../pic/small.png") no-repeat -135px -5px ;
}
.shoppingCart li:last-child p{
    color: #fff;
    font-size: 16px;
    line-height: 56px;
}

